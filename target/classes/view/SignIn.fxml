<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kotlarchik.controller.ControllerSignIn">
   <children>
      <TextField fx:id="txtLogin" layoutX="100.0" layoutY="81.0" prefHeight="50.0" prefWidth="200.0" promptText="Логин" style="-fx-background-color: #d3d3d3;">
         <font>
            <Font name="Comic Sans MS Bold" size="16.0" />
         </font>
      </TextField>
      <PasswordField fx:id="txtPass" layoutX="100.0" layoutY="150.0" prefHeight="50.0" prefWidth="200.0" promptText="Пароль" style="-fx-background-color: #d3d3d3;">
         <font>
            <Font name="Comic Sans MS Bold" size="16.0" />
         </font>
      </PasswordField>
      <Button fx:id="buttonSign" layoutX="166.0" layoutY="280.0" mnemonicParsing="false" onAction="#pressSign" text="Вход">
         <font>
            <Font name="Comic Sans MS Bold" size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
